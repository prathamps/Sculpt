{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*.ts", "src/types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
